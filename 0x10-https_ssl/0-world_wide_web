#!/usr/bin/env bash

# Function to print DNS information
print_dns_info() {
    local subdomain="$1"
    local alias="$2"
    local dns_response
    dns_response=$(dig "$subdomain" +short)

    if [ -n "$dns_response" ]; then
        local record_type
        record_type=$(dig "$subdomain" +short -t "$dns_response" | awk '{print $4}')
        echo "The subdomain $alias is a $record_type record and points to $dns_response"
    else
        echo "No DNS information found for $subdomain"
    fi
}

# Check the number of arguments
if [ $# -eq 1 ]; then
    domain="$1"
    subdomains=("www" "lb-01" "web-01" "web-02")

    for subdomain in "${subdomains[@]}"; do
        print_dns_info "www.$domain" "www"
    done
elif [ $# -eq 2 ]; then
    domain="$1"
    sub="$2"
    print_dns_info "$sub.$domain" "$sub"
fi

